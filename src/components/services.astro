---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Custom Design",
    description:
      "We create unique and attractive designs that reflect your brand's identity and captivate your customers.",
    icon: "mdi:palette",
  },
  {
    title: "Tailored Software Development",
    description:
      "We develop custom software solutions that fit the specific needs of your business.",
    icon: "mdi:code-braces",
  },
  {
    title: "Website Creation",
    description:
      "We build responsive and optimized websites, ensuring an exceptional user experience across all devices.",
    icon: "mdi:web",
  },
  {
    title: "Data Consulting",
    description:
      "We help you analyze and manage your data effectively to make informed and strategic decisions.",
    icon: "mdi:database",
  },
  {
    title: "SEO Optimization",
    description:
      "We implement SEO strategies that improve your website's visibility in search engines and attract organic traffic.",
    icon: "mdi:chart-line",
  },
  {
    title: "Digital Marketing",
    description:
      "We offer comprehensive digital marketing services to enhance your online presence and reach your target audience.",
    icon: "mdi:bullhorn",
  },
];
---

<ContentSection title="Our Services" id="services">
  <Fragment slot="lead">
    At 
    <span class="text-primary">ALGORITHMIC</span>, we provide tailored solutions that enhance your online presence and drive success.</Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
